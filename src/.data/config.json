{
  "data": {
        "d-gensimldamodel":{
            "label": "Gensim LDA model",
            "data_class": "gensim_ldamodel",
            "param": ["p-file"],
            "file_name": "ldamodel",
            "class_label": "LDA"
        },
        "d-dictionary-corpus":{
            "label": "Gensim Dictionary",
            "data_class": "gensim_dictionary",
            "param": ["p-file"],
            "file_name": "dictionary",
            "class_label": "LDA"
        },
        "d-model-corpus":{
            "label": "Corpus vectors",
            "data_class": "series",
            "param": ["p-file"],
            "file_name": "modelled_corpus",
            "class_label": "LDA"
        },
        "d-processed-corpus":{
            "label": "Processed corpus",
            "data_class": "series",
            "param": ["p-file"],
            "file_name": "processed_corpus",
            "class_label": "LDA"
        },
        "d-word-topics-table":{
            "label": "Topic Words table",
            "data_class": "table",
            "param": ["p-file"],
            "file_name": "word_topics",
            "class_label": "LDA"
        },
        "d-doc-topics-table":{
            "label": "Dominant topic x document",
            "data_class": "table",
            "param": ["p-file"],
            "file_name": "doc_topics",
            "class_label": "LDA"
        },
        "d-gen-text":{
            "label": "Textual document/s",
            "data_class": "text",
            "param": ["p-file"],
            "file_name": "doc",
            "class_label": "General"
        },
        "d-gen-pdf":{
            "label": "PDF document/s",
            "data_class": "pdf",
            "param": ["p-file"],
            "file_name": "pdf_doc",
            "class_label": "General"
        },
        "d-coherence":{
            "label": "LDA coherence value",
            "data_class": "text",
            "param": ["p-file"],
            "file_name": "coherence",
            "class_label": "LDA"
        },
        "d-perplexity":{
            "label": "LDA perplexity value",
            "data_class": "text",
            "param": ["p-file"],
            "file_name": "perplexity",
            "class_label": "LDA"
        },
        "d-stopwords":{
            "label": "List of stopwords",
            "data_class": "table",
            "param": ["p-file"],
            "file_name": "stopwords",
            "class_label": "LDA"
        },
        "d-webpage":{
            "label": "A web page",
            "data_class": "html",
            "param": ["p-file"],
            "file_name": "webpage",
            "class_label": "General"
        },
        "d-chartimg":{
            "label": "A chart image",
            "data_class": "img",
            "param": ["p-file"],
            "file_name": "chart",
            "class_label": "General"
        },
        "d-chartlegend":{
            "label": "A chart legend",
            "data_class": "table",
            "param": ["p-file"],
            "file_name": "legend",
            "class_label": "General"
        }
  },
  "tool": {
        "t-topic-words": {
            "label": "Words X Topic",
            "class_label": "Text-Analysis",
            "class": "TextAnalysis",
            "param": ["p-numwords"],
            "function": "words_prop_topics",
            "compatible_input": ["d-model-corpus","d-gensimldamodel"],
            "output": ["d-word-topics-table"]
        },
        "t-topic-docs": {
            "label": "Doc X Topic",
            "class_label": "Text-Analysis",
            "class": "TextAnalysis",
            "function": "doc_prop_topics",
            "compatible_input": ["d-model-corpus","d-gensimldamodel"],
            "output": ["d-doc-topics-table"]
        },
        "t-topic-ldavis": {
            "label": "Visualize with LDAvis",
            "class_label": "Text-Analysis",
            "class": "TextAnalysis",
            "function": "ldavis",
            "compatible_input": ["d-model-corpus","d-dictionary-corpus","d-gensimldamodel"],
            "output": ["d-webpage"]
        },
        "t-corpus-build": {
            "label": "Corpus builder",
            "class_label": "Text-Analysis",
            "class": "TextAnalysis",
            "function": "build_corpus",
            "param": ["p-corpusmodel"],
            "compatible_input": ["d-processed-corpus"],
            "output": ["d-model-corpus","d-dictionary-corpus"]
        },
        "t-corpus-tokenize": {
            "label": "Tokenizer",
            "class_label": "Text-Analysis",
            "class": "TextAnalysis",
            "function": "tokenize",
            "param": ["p-defstopwords"],
            "compatible_input": ["d-gen-text","d-stopwords"],
            "output": ["d-processed-corpus"]
        },
        "t-topic-lda": {
            "label": "Topic modeling with LDA",
            "class_label": "Text-Analysis",
            "class": "TextAnalysis",
            "function": "lda",
            "param": ["p-topic"],
            "compatible_input": ["d-model-corpus","d-dictionary-corpus"],
            "output": ["d-gensimldamodel"]
        },
        "t-filter-text": {
            "label": "Filter the text",
            "class": "Filter",
            "class_label": "Filter",
            "function": "filter_text",
            "param": ["p-filteropt","p-filterregex"],
            "compatible_input": ["d-gen-text"],
            "output": ["d-gen-text"]
        },
        "t-save-files": {
            "label": "Save files",
            "class": "Terminal",
            "class_label": "Terminal",
            "function": "save_file",
            "compatible_input": ["d-dictionary-corpus","d-model-corpus","d-processed-corpus","d-gen-text","d-word-topics-table","d-doc-topics-table","d-coherence","d-perplexity","d-doc-topics","d-chartimg","d-webpage"]
        },
        "t-convert-pdftotext": {
            "label": "Convert PDF document/s to text",
            "class": "Convert",
            "class_label": "Converter",
            "function": "pdf_to_text",
            "compatible_input": ["d-gen-pdf"],
            "output": ["d-gen-text"]
        },
        "t-doctopics-view": {
            "label": "Visualize document topics",
            "class": "Terminal",
            "class_label": "Terminal",
            "function": "doc_topics_barchart",
            "compatible_input": ["d-doc-topics"],
            "output": ["d-chartimg"]
        },
        "t-topics-view": {
            "label": "Visualize topics words",
            "class": "Terminal",
            "class_label": "Terminal",
            "function": "topics_words_list",
            "compatible_input": ["d-word-topics-table"],
            "output": ["d-chartimg"]
        }
  },
  "param": {
        "p-file":{
          "handler": "select-file",
          "label": "File/s or Directory:",
          "value": {},
          "init_value": {}
        },
        "p-log":{
          "handler": "switch-value",
          "label": "Log scale",
          "value_label": ["True","False"],
          "value": [0,1],
          "init_value": 0
        },
        "p-topic":{
          "handler": "input-text",
          "label": "Number of topics:",
          "value": "2",
          "init_value": 2
        },
        "p-numwords":{
          "handler": "select-value",
          "label": "Number of words:",
          "value_label": ["10","15","20","25","30","40","50"],
          "value": [10,15,20,25,30,40,50],
          "init_value": 10
        },
        "p-filteropt":{
          "handler": "check-value",
          "label": "Filter and remove:",
          "value_label": ["Dates","References","Header"],
          "value": ["dates","references","header"],
          "init_value": [0,0,0]
        },
        "p-filterregex":{
          "handler": "input-text",
          "label": "Specific text <p> (Regular expressions supported, try it on <a target=&quot;_blank&quot; href=https://regex101.com>the online demo</a>) </p>",
          "value": "",
          "init_value": ""
        },
        "p-defstopwords":{
          "handler": "select-value",
          "label": "Stopwwords language:",
          "value_label": ["None","Arabic","Azerbaijani","Danish","Dutch","English","Finnish","French","German","Greek","Hungarian","Indonesian","Italian","Kazakh","Nepali","Norwegian","Portuguese","Romanian","Russian","Spanish","Swedish","Turkish"],
          "value": ["none","arabic","azerbaijani","danish","dutch","english","finnish","french","german","greek","hungarian","indonesian","italian","kazakh","nepali","norwegian","portuguese","romanian","russian","spanish","swedish","turkish"],
          "init_value": "none"
        },
        "p-corpusmodel":{
          "handler": "select-value",
          "label": "Corpus model:",
          "value_label": ["Bag of words","TFIDF"],
          "value": ["bag_of_words","tfidf"],
          "init_value": "Bag of words"
        }
  }
}
